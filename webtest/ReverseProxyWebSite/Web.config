<configuration>
  <appSettings>
    <!--<add key="ClownFish.Web:ReverseProxyModule:TargetSite" value="http://tucao.fish-test.com:1088"/>-->
  </appSettings>

	<system.web>
		<compilation debug="false" targetFramework="4.5" />
        <customErrors mode="Off"/>
		<httpRuntime targetFramework="4.5" 
                     requestPathInvalidCharacters=""
                     enableHeaderChecking="false"
                     enableKernelOutputCache="false"
                     enableVersionHeader="false"
                     sendCacheControlHeader="false"
                     requestValidationMode="2.0"
                     />
	</system.web>


	<system.webServer>
		<validation validateIntegratedModeConfiguration="false" />
		<modules>
			<remove name="OutputCache" />
			<remove name="DefaultAuthentication" />
			<remove name="UrlRoutingModule-4.0" />
			<remove name="UrlMappingsModule" />
			<remove name="WindowsAuthentication" />
			<remove name="UrlAuthorization" />
			<remove name="ScriptModule-4.0" />
			<remove name="AnonymousIdentification" />
			<remove name="FormsAuthentication" />
			<remove name="FileAuthorization" />
			<remove name="Profile" />
			<remove name="RoleManager" />
			<remove name="Session" />

			<add name="ReverseProxyModule" type="ClownFish.Web.Proxy.ReverseProxyModule, ClownFish.Web" preCondition="integratedMode" />
		</modules>
		<httpErrors errorMode="Detailed" />
		<security>
			<requestFiltering allowDoubleEscaping="true" />
		</security>
        <httpProtocol>
            <customHeaders>
                <remove name="X-Powered-By" />
            </customHeaders>
        </httpProtocol>
	</system.webServer>

	<!--<system.net>
			<defaultProxy>
				<proxy usesystemdefault="False" bypassonlocal="False" proxyaddress="http://127.0.0.1:8888" />
			</defaultProxy>
	</system.net>-->

</configuration>
